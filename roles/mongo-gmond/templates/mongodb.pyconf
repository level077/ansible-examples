modules {
    module {
        name = "mongodb_{{ port }}"
        language = "python"
        param host {
	    value = "{{ host }}"
	}
        param port {
	    value = {{ port }}
	}
        param mongo {
	    value = "{{ mongo }}"
	}
    }
}

collection_group {
    collect_every = 10
    time_threshold = 20
    metric {
       name_match = "mongodb_(.*)"
       name = "mongo_\\1"
       value_threshold = 1.0
    }
}
